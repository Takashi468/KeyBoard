<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="Keyboard.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Keyboard"
    Width="1080"
    Height="450"
    Background="White"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="KeyboardButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Background" Value="#F2F2F2" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="#222" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Viewbox Stretch="Uniform">
            <StackPanel
                Height="Auto"
                Margin="10"
                Orientation="Vertical">

                <!--  แถวตัวเลข  -->
                <StackPanel Orientation="Horizontal">
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="`">
                        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Text="~" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="Bold"
                                Text="`" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="1">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="!" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="1" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="2">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="@" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="2" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="3">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="#" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="3" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="4">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="$" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="4" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="5">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="%" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="5" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="6">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="^" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="6" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="7">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="&amp;" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="7" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="8">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="*" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="8" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="9">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="(" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="9" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="0">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text=")" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="0" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="-">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="_" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="-" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="=">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="+" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="=" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="60"
                        Click="Backspace_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="Back">
                        <TextBlock FontWeight="Bold" Text="Back" />
                    </Button>
                </StackPanel>

                <!--  แถว QWERTY  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70" />
                        <!--  Tab  -->
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Width="66"
                        Click="Tab_Click"
                        Content="Tab"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="1"
                        Click="Key_Click"
                        Content="q"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="2"
                        Click="Key_Click"
                        Content="w"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="3"
                        Click="Key_Click"
                        Content="e"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="4"
                        Click="Key_Click"
                        Content="r"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="5"
                        Click="Key_Click"
                        Content="t"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="6"
                        Click="Key_Click"
                        Content="y"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="7"
                        Click="Key_Click"
                        Content="u"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="8"
                        Click="Key_Click"
                        Content="i"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="9"
                        Click="Key_Click"
                        Content="o"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="10"
                        Click="Key_Click"
                        Content="p"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="11"
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="[">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="{}{" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="[" />
                        </StackPanel>
                    </Button>
                    <Button
                        Grid.Column="12"
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="]">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="}" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="]" />
                        </StackPanel>
                    </Button>
                    <Button
                        Grid.Column="13"
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="\\">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="|" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="\" />
                        </StackPanel>
                    </Button>
                </Grid>


                <!--  แถว CapsLock  -->
                <StackPanel Orientation="Horizontal">
                    <Button
                        Width="60"
                        Click="CapsLock_Click"
                        Content="Caps"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="a"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="s"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="d"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="f"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="g"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="h"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="j"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="k"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="l"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag=":">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text=";" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text=":" />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="&quot;">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="'" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="&quot;" />
                        </StackPanel>
                    </Button>
                    <Button
                        Width="80"
                        Click="Enter_Click"
                        Content="Enter"
                        Style="{StaticResource KeyboardButtonStyle}" />
                </StackPanel>

                <!--  แถว Shift และ Space  -->
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button
                        Width="80"
                        Click="Shift_Click"
                        Content="Shift"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="z"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="x"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="c"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="v"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="b"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="n"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Width="40"
                        Click="Key_Click"
                        Content="m"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag=",">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="&lt;" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="," />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag=".">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="&gt;" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="." />
                        </StackPanel>
                    </Button>
                    <Button
                        Click="Key_Click"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="/">
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontSize="12" Text="?" />
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Text="/" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!--  แถว SpaceBar  -->
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Grid>
                        <Button
                            Width="300"
                            Click="Space_Click"
                            Content="Space"
                            Style="{StaticResource KeyboardButtonStyle}" />
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>
