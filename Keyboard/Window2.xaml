<Window
    x:Class="Keyboard.Window2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Keyboard"
    Width="1080"
    Height="500"
    AllowsTransparency="False"
    Background="White"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="KeyboardButtonStyle" TargetType="Button">
            <Setter Property="MinWidth" Value="100" />
            <Setter Property="MinHeight" Value="100" />
            <Setter Property="Margin" Value="4" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="32" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Background" Value="#F9F9F9" />
            <Setter Property="BorderBrush" Value="#CCCCCC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="#222222" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10"
                            SnapsToDevicePixels="True">
                            <ContentPresenter
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#EEEEEE" />
                                <Setter Property="BorderBrush" Value="#BBBBBB" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DDDDDD" />
                                <Setter Property="BorderBrush" Value="#AAAAAA" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Viewbox Stretch="Uniform">
            <StackPanel
                Margin="20"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <!--  แถวตัวเลข  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Click="Key_Click"
                        Content="1"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="1" />
                    <Button
                        Grid.Column="1"
                        Click="Key_Click"
                        Content="2"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="2" />
                    <Button
                        Grid.Column="2"
                        Click="Key_Click"
                        Content="3"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="3" />
                    <Button
                        Grid.Column="3"
                        Click="Key_Click"
                        Content="4"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="4" />
                    <Button
                        Grid.Column="4"
                        Click="Key_Click"
                        Content="5"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="5" />
                    <Button
                        Grid.Column="5"
                        Click="Key_Click"
                        Content="6"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="6" />
                    <Button
                        Grid.Column="6"
                        Click="Key_Click"
                        Content="7"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="7" />
                    <Button
                        Grid.Column="7"
                        Click="Key_Click"
                        Content="8"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="8" />
                    <Button
                        Grid.Column="8"
                        Click="Key_Click"
                        Content="9"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="9" />
                    <Button
                        Grid.Column="9"
                        Click="Key_Click"
                        Content="0"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="0" />
                    <Button
                        Grid.Column="10"
                        Click="Backspace_Click"
                        Content="Del"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="Back" />
                </Grid>

                <!--  แถว QWERTY  -->
                <UniformGrid Columns="10">
                    <Button
                        x:Name="KEY_Q"
                        Click="Key_Click"
                        Content="q"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="q" />
                    <Button
                        Click="Key_Click"
                        Content="w"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="w" />
                    <Button
                        Click="Key_Click"
                        Content="e"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="e" />
                    <Button
                        Click="Key_Click"
                        Content="r"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="r" />
                    <Button
                        Click="Key_Click"
                        Content="t"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="t" />
                    <Button
                        Click="Key_Click"
                        Content="y"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="y" />
                    <Button
                        Click="Key_Click"
                        Content="u"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="u" />
                    <Button
                        Click="Key_Click"
                        Content="i"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="i" />
                    <Button
                        Click="Key_Click"
                        Content="o"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="o" />
                    <Button
                        Click="Key_Click"
                        Content="p"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="p" />
                </UniformGrid>

                <!--  แถว CapsLock  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Click="Key_Click"
                        Content="a"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="a" />
                    <Button
                        Grid.Column="1"
                        Click="Key_Click"
                        Content="s"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="s" />
                    <Button
                        Grid.Column="2"
                        Click="Key_Click"
                        Content="d"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="d" />
                    <Button
                        Grid.Column="3"
                        Click="Key_Click"
                        Content="f"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="f" />
                    <Button
                        Grid.Column="4"
                        Click="Key_Click"
                        Content="g"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="g" />
                    <Button
                        Grid.Column="5"
                        Click="Key_Click"
                        Content="h"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="h" />
                    <Button
                        Grid.Column="6"
                        Click="Key_Click"
                        Content="j"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="j" />
                    <Button
                        Grid.Column="7"
                        Click="Key_Click"
                        Content="k"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="k" />
                    <Button
                        Grid.Column="8"
                        Click="Enter_Click"
                        Content="Enter"
                        Style="{StaticResource KeyboardButtonStyle}" />
                </Grid>

                <!--  แถว Shift  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Click="CapsLock_Click"
                        Content="&#x2191;"
                        FontSize="45"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="1"
                        Click="Key_Click"
                        Content="z"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="z" />
                    <Button
                        Grid.Column="2"
                        Click="Key_Click"
                        Content="x"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="x" />
                    <Button
                        Grid.Column="3"
                        Click="Key_Click"
                        Content="c"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="c" />
                    <Button
                        Grid.Column="4"
                        Click="Key_Click"
                        Content="v"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="v" />
                    <Button
                        Grid.Column="5"
                        Click="Key_Click"
                        Content="b"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="b" />
                    <Button
                        Grid.Column="6"
                        Click="Key_Click"
                        Content="n"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="n" />
                    <Button
                        Grid.Column="7"
                        Click="Key_Click"
                        Content="m"
                        Style="{StaticResource KeyboardButtonStyle}"
                        Tag="m" />
                    <Button
                        Grid.Column="8"
                        Click="CapsLock_Click"
                        Content="&#x2191;"
                        FontSize="45"
                        Style="{StaticResource KeyboardButtonStyle}" />
                </Grid>

                <!--  แถว SpaceBar  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Click="Special_Click"
                        Content="?123"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="1"
                        Click="Space_Click"
                        Content="Space"
                        Style="{StaticResource KeyboardButtonStyle}" />
                    <Button
                        Grid.Column="2"
                        Click="Fullstop_Click"
                        Content="."
                        Style="{StaticResource KeyboardButtonStyle}" />
                </Grid>
            </StackPanel>
        </Viewbox>
    </Grid>
</Window>